@model List<WebProgramlamaProje.Entities.Brand>

@{
    ViewBag.Title = "Markalar";
}

<div class="col-12 m-3 text-center">
    <h3>Markalar</h3>
    <a class="btn btn-success" href="@Url.Action("Add","Brand")">
        <i class="fa-solid fa-plus"></i>
        Ekle
    </a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ad</th>
                <th>Operasyonlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-danger" href="@Url.Action("Remove", "Brand", new {id=c.Id})">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                            <a class="btn btn-warning" href="@Url.Action("Update", "Brand", new {id=c.Id})">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
