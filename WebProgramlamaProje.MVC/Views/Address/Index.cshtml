@model List<WebProgramlamaProje.Entities.Address>

@{
    ViewBag.Title = "Adresler";
}

<div class="col-12 m-3 text-center">
    <h3>Kullanıcı Addresleri</h3>
    <a class="btn btn-success" href="@Url.Action("Add","Address")">
        <i class="fa-solid fa-plus"></i>
        Ekle
    </a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>İlçe</th>
                <th>Şehir</th>
                <th>Açıklama</th>
                <th>Oluşturma tarihi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Title</td>
                    <td>@a.District.Name</td>
                    <td>@a.District.City.Name</td>
                    <td>@a.Description</td>
                    <td>@a.DateOfCreation</td>

                    <td>
                        <div class="btn-group">
                            <a class="btn btn-danger" href="@Url.Action("Remove", "Address", new {id=a.Id})">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                            <a class="btn btn-warning" href="@Url.Action("Update", "Address", new {id=a.Id})">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

