@model WebProgramlamaProje.MVC.Areas.Admin.Models.UserInsertionViewModel

@{
    ViewBag.Title = "Kullanıcılar";
}

<div class="text-center my-3">
    <div class="display-6">Kullanıcı Güncelle</div>
</div>

<div class="d-flex justify-content-center my-5">

    <div class="col-md-6">
        <div class="text-danger">
            @Html.ValidationSummary()
        </div>

        @using (Html.BeginForm("Update", "User", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.User.Id, new { value = Model.User.Id });
            @Html.HiddenFor(m => m.User.DateOfRegistration, new { value = Model.User.DateOfRegistration });

            <div class="form-group my-3">
                @Html.Label("Kullanıcı Adı")
                @Html.TextBoxFor(m => m.User.Name, new { @class = "form-control" })
            </div>

            <div class="form-group my-3">
                @Html.Label("Kullanıcı Soyadı")
                @Html.TextBoxFor(m => m.User.Surname, new { @class = "form-control" })
            </div>

            <div class="form-group my-3">
                @Html.Label("E-posta")
                @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control", type = "email" })
            </div>

            <div class="form-group my-3">
                @Html.Label("Şifre")
                @Html.TextBoxFor(m => m.User.Password, new { @class = "form-control", type = "password" })
            </div>

            <div class="form-group my-3">
                @Html.Label("Telefon")
                @Html.TextBoxFor(m => m.User.PhoneNumber, new { @class = "form-control", })
            </div>

            <div class="form-group my-3">
                @Html.Label("Rol Seçin")
                @Html.DropDownListFor(m => m.User.RoleId, Model.RoleList, new { @class = "form-select" })
            </div>

            <div class="form-group my-3">
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Güncelle
                    </button>
                    <a class="btn btn-outline-primary" href="@Url.Action("Index","User")">
                        <i class="fa fa-list"></i> Kullanıcılar
                    </a>
                </div>
            </div>
        }
    </div>

</div>