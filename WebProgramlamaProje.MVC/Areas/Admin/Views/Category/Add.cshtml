@model WebProgramlamaProje.Entities.Category
@{
    ViewBag.Title = "Kategoriler";
}

<div class="text-center my-3">
    <div class="display-6">Kategori Ekle</div>
</div>

<div class="d-flex justify-content-center my-5">
    @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { @class = "col-md-6" }))
    {
        <div class="form-group my-3">
            @Html.Label("Kategori Adı")
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group my-3">
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Ekle
                </button>
                <a class="btn btn-outline-primary" href="@Url.Action("Index","Category")">
                    <i class="fa fa-list"></i> Kategoriler
                </a>
            </div>
        </div>
    }
</div>