@model WebProgramlamaProje.MVC.Models.UserRegisterViewModel

@{
    ViewBag.Title = "Kayıt Ol";
}

<div class="text-center my-3">
    <i class="fa-solid fa-user-plus fa-4x"></i>
    <div class="display-6">Kayıt Ol</div>
</div>

<div class="d-flex justify-content-center my-5">

    <div class="col-md-6">
        <div class="text-danger">
            @Html.ValidationSummary()
        </div>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="form-group my-3">
                @Html.Label("Kullanıcı Adı")
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>

            <div class="form-group my-3">
                @Html.Label("Kullanıcı Soyadı")
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
            </div>

            <div class="form-group my-3">
                @Html.Label("E-posta")
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
            </div>

            <div class="form-group my-3">
                @Html.Label("Şifre")
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password" })
            </div>
            <div class="form-group my-3">
                @Html.Label("Şifreyi Tekrar Girin")
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password" })
            </div>

            <div class="form-group my-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fa fa-save"></i> Kayıt Ol
                </button>
                <p>Zaten bir hesabınız var mı? Giriş için <a href="@Url.Action("Login","Account")">tıklayın</a>.</p>
            </div>
        }
    </div>

</div>
