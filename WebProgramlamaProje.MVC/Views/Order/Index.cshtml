@model List<WebProgramlamaProje.Entities.Order>

@{
    ViewBag.Title = "Siparişler";
}

<div class="col-12 m-3 text-center">
    <h3>Siparişler</h3>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Adres</th>
                <th>Toplam Tutar</th>
                <th>Kargo Firması</th>
                <th>Sipariş Durumuı</th>
                <th>Sipariş tarihi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.Address.Title</td>
                    <td>@o.Cart.CartTotal</td>
                    <td>@o.CargoCompany.Name</td>
                    <td>@o.OrderStatus.Name</td>
                    <td>@o.DateOfOrder</td>


